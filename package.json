{
  "name": "yuzu-devtools",
  "description": "Yuzu Development Tool for Chrome",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Marco Solazzi",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode=development --config=webpack.dev.js",
    "release": "npm run lint && npm run test && webpack --mode=production && npm run compress",
    "dev": "webpack --mode=development",
    "compress": "node ./scripts/compress.js",
    "lint": "eslint src/**/*.js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.0",
    "archiver": "^3.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "dom-testing-library": "^3.16.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "jest-emotion": "^10.0.5",
    "jest-environment-basichtml": "^1.1.0",
    "jest-serializer-html": "^5.0.0",
    "make-dir": "^1.3.0",
    "prettier": "^1.15.3",
    "raw-loader": "^1.0.0",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "classcat": "^3.2.3",
    "emotion": "^10.0.5",
    "hyperhtml": "^2.22.1",
    "lodash": "^4.17.11",
    "material-design-icons": "^3.0.1",
    "split-grid": "^1.0.9"
  },
  "jest": {
    "verbose": true,
    "bail": false,
    "testURL": "http://localhost",
    "collectCoverageFrom": [],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svg$": "<rootDir>/config/jest-svg-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!material-design-icons/)"
    ],
    "collectCoverage": false,
    "testMatch": [
      "**/*.test.js"
    ],
    "testEnvironment": "basichtml",
    "snapshotSerializers": [
      "./config/jest-serializer-comments.js",
      "jest-serializer-html",
      "jest-emotion"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/jest.setup.js",
    "moduleNameMapper": {
      "^@[/](.+)": "<rootDir>/src/$1"
    }
  }
}
