{
  "name": "yuzu-devtools",
  "description": "Yuzu Development Tool for Chrome",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Marco Solazzi",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode=development --config=webpack.dev.js",
    "release": "npm run lint && npm run test && webpack --mode=production && npm run compress",
    "dev": "webpack --mode=development",
    "compress": "node ./scripts/compress.js",
    "lint": "eslint \"src/**/*.js\"",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "archiver": "^3.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "dom-testing-library": "^4.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-lit": "^0.6.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.8.0",
    "jest-dom": "^3.2.1",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "jest-serializer-html": "^7.0.0",
    "make-dir": "^3.0.0",
    "prettier": "^1.17.0",
    "raw-loader": "^2.0.0",
    "regenerator-runtime": "^0.13.2",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "haunted": "^4.2.1",
    "lit-html": "^1.0.0",
    "lodash": "^4.17.11",
    "material-design-icons": "^3.0.1",
    "split-grid": "^1.0.9"
  },
  "jest": {
    "verbose": true,
    "bail": false,
    "testURL": "http://localhost",
    "collectCoverageFrom": [],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svg$": "<rootDir>/config/jest-svg-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!material-design-icons|lit-html|haunted)"
    ],
    "collectCoverage": false,
    "testMatch": [
      "**/*.test.js"
    ],
    "snapshotSerializers": [
      "./config/jest-serializer-comments.js",
      "jest-serializer-html"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest-setup.js",
      "<rootDir>/node_modules/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "^@[/](.+)": "<rootDir>/src/$1"
    }
  }
}
